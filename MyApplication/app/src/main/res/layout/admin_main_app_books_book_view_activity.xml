<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey_black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutFiles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/red_gradient_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/admin_book_add_place_back_arrow"
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:layout_marginStart="17dp"
            android:background="#00000000"
            android:isScrollContainer="false"
            app:icon="@drawable/ic_baseline_arrow_back_24"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"
            app:iconSize="26dp"
            app:iconTint="@android:color/primary_text_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView129"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Book"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/admin_book_add_place_back_arrow"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_book_add_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/admin_bookView_bookImage"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="BookImage"
                    android:paddingTop="10dp"
                    android:scaleType="fitCenter"
                    android:textAlignment="textEnd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ImageContrastCheck"
                    tools:srcCompat="@tools:sample/avatars" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/admin_bookView_bookRef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Ref: BOOK_OAZ456aadZAD8"
                android:textAlignment="center"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admin_bookView_bookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By: Author Name"
                android:textAlignment="center"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/admin_bookView_bookEdition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edition: 15th"
                android:textAlignment="center"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/admin_bookView_bookPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Place: A1,Front,R2,C3"
                android:textAlignment="center"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admin_bookView_bookQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Quantity: 29 Copy"
                android:textAlignment="center"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="Description"
                android:textAlignment="center"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admin_bookView_bookDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:text="Lorem Ipsum Arert Kuaq Olem Silr Taiko Sai Mijikae Paossko"
                android:textAlignment="textStart"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:text="Tags:"
                android:textAlignment="textStart"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admin_bookView_bookTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:text="Science, Physics, Biology, Software Engineering"
                android:textAlignment="textStart"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp" />

            <Button
                android:id="@+id/admin_bookView_bookModify_button"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/user_nav_item_selected"
                android:text="Modify"
                android:textColor="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/admin_bookView_bookDelete_button"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#BA0438"
                android:text="Delete"
                android:textColor="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/admin_book_add_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:text="Book Name"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutFiles"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>