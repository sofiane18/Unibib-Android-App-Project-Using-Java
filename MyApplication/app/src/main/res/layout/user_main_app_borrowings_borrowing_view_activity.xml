                app:layout_constraintStart_toEndOf="@+id/admin_bookView_bookImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/admin_bookView_bookAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="By: Author Name"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/admin_bookView_bookImage"
                app:layout_constraintTop_toBottomOf="@+id/admin_book_add_info" />

            <TextView
                android:id="@+id/admin_bookView_bookEdition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="Edition: 15th"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
